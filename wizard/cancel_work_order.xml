<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- chek.order form view -->
    <record id="cancel_order_view_form" model="ir.ui.view">
        <field name="name">cancel.order.view.form</field>
        <field name="model">cancellation.workorder</field>
        <field name="arch" type="xml">
            <form string="Reason for cancellation">
                <sheet>
                    <group>
                        <field name="notes"/>   
                    </group>
                    <footer>
                        <button string="Confirm" name="action_cancel" class="btn-primary" type="object" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
